[color]
    ui = auto

[color "diff"]
    meta = blue
    frag = white
    old = red bold
    new = green bold

[core]
    editor = vim
    # http://stackoverflow.com/questions/136178/git-diff-handling-long-lines
    # If doesn't work, try: pager = less -+$LESS -FRX
    pager = less -r
    autocrlf = false
    safecrlf = false
    mergeoptions = --no-edit
    excludesfile = ~/.gitignore

[include]
    path = .gitlocal
