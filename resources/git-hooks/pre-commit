#!/usr/bin/env php
<?php
/**
 * .git/hooks/pre-commit
 *
 * This pre-commit hooks will check for PHP errors (lint), and make sure the
 * code is PSR-2 compliant.
 *
 * @author  Reen Lokum http://github.com/reenl
 *
 * The orignal version of this file can be found at:
 * https://github.com/zendframework/zf2/blob/master/README-GIT.md
 */

$extensions = array(
    'php',
    'phtml',
);

$exit = 0;

/*
 * collect all files which have been added, copied or
 * modified and store them in an array called output
 */
$output = array();
exec('git diff --cached --name-status --diff-filter=ACM', $output);

// Filter files that don't need a check.
$fileList = array();
foreach ($output as $file) {
    if ('D' === substr($file, 0, 1)) {
        // deleted file; do nothing
        continue;
    }

    $fileName = trim(substr($file, 1));

    /*
     * Only PHP files
     */
    $extension = strtolower(pathinfo($fileName, PATHINFO_EXTENSION));
    if (!in_array($extension, $extensions)) {
        continue;
    }

    $fileList[] = $fileName;
}

$syntaxErrorHeader = 'Syntaxt errors:'.PHP_EOL;
foreach ($fileList as $fileName) {
    /*
     * Check for parse errors
     */
    $output = array();
    $return = 0;
    exec("php -l " . escapeshellarg($fileName).' 2>&1', $output, $return);

    if ($return != 0) {
        echo $syntaxErrorHeader;
        $syntaxErrorHeader = '';

        echo '  - '.$fileName.PHP_EOL;
        echo '    '.$output[0].PHP_EOL.PHP_EOL;
        $exit = 1;
        continue;
    }
}

// Use .php_cs config if project has one.
$configFile = '';
if (file_exists('.php_cs')) {
    $configFile = ' --config-file='.escapeshellarg(realpath('.php_cs'));
}

$codeStyleHeader = 'Code Style Errors:'.PHP_EOL;
foreach ($fileList as $fileName) {
    /*
     * PHP-CS-Fixer
     */
    $output = array();
    $return = null;
    exec('php-cs-fixer fix --dry-run --verbose --level=all'.$configFile.' '.escapeshellarg($fileName), $output, $return);

    // Ignore config load line
    if (isset($output[0]) && strpos($output[0], 'Loaded config from') !== false) {
        array_shift($output);
    }

    while (isset($output[0]) && substr($output[0], 0, 1) == '!') {
        array_shift($output);
    }

    // Check output
    if ($return != 0 || !empty($output)) {
        echo $codeStyleHeader;
        $codeStyleHeader = '';

        $matches = array();
        preg_match('#\((.*)\)#', $output[0], $matches);
        echo '  - '.$fileName.' (Exit code: '.$return.')'.PHP_EOL;
        if (!isset($matches[1])) {
            echo '    Unable to parse php-cs-fixer output:'.PHP_EOL;
            echo implode(PHP_EOL.'        ', $output).PHP_EOL;
        } else {
            echo '    '.$matches[1].PHP_EOL.PHP_EOL;
        }
        $exit = 1;
        continue;
    }
}

exit($exit);
